{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f4f4;
        }

        .btn-primary, .btn-secondary, .btn-success, .btn-info, .btn-danger {
            text-decoration: none;
            padding: 8px 15px;
            border-radius: 4px;
            color: white;
            margin-right: 10px;
            display: inline-block;
            transition: background-color 0.3s ease;
        }

        .btn-primary { background-color: #007bff; }
        .btn-secondary { background-color: #6c757d; }
        .btn-success { background-color: #28a745; }
        .btn-info { background-color: #17a2b8; }
        .btn-danger { background-color: #dc3545; }

        .btn-primary:hover, .btn-secondary:hover, .btn-success:hover, .btn-info:hover, .btn-danger:hover {
            opacity: 0.8;
        }

        h1 {
            text-align: center;
            margin: 20px 0;
        }

        .table {
            width: 80%;
            margin: 0 auto;
            background-color: white;
            border-collapse: collapse;
        }

        .table th, .table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        ul {
            padding-left: 20px;
            margin: 0;
        }

        ul li {
            list-style-type: disc;
        }
    </style>

    <a href="{{ path('app_home') }}" class="btn-secondary">Home</a>
    <a href="{{ path('cart_index') }}" class="btn-primary">View Cart</a>

    <h1>Product List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Stock</th>
                <th>Volume</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.stock }}</td>
                    <td>{{ product.volume }}</td>
                    <td>
                        <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success">Add to Cart</a>
                        <a href="{{ path('product_show', {'id': product.id}) }}" class="btn btn-info">View</a>
                        <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-primary">Edit</a>
                        <form action="{{ path('product_delete', {'id': product.id}) }}" method="post" onsubmit="return confirm('Are you sure?');" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <tr>
                    <th>Flavors</th>
                    <td>
                        {% if product.flavors is not empty %}
                            <ul>
                                {% for flavor in product.flavors %}
                                    <li>{{ flavor.name }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            No flavors available
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
